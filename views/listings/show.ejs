<%- layout("/layouts/boilerplate")  %>
<div class="row">
    <div class="col-8 offset-2"> 
        <h3>Listing Details</h3>
    </div>
    <div class="card col-6 offset-2">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing_image">
        <div class="card-body">
            <p class="card-text">
                <b><%= listing.title %></b><br>
                <%= listing.description %><br>
                &#8377; <%= listing.price.toLocaleString("en-IN") %><br>
                <%= listing.location %><br>
                <%= listing.country %><br>
            </p>
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark mb-3">Edit</a>
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger mb-3 center">Delete</button>
            </form>
        </div>
    </div>
</div>
