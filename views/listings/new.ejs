<%- layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br>
        <h3>Create a new listing</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            
            <div class="mb-3">
                <label for="title" class="form-label">Title</label> 
                <input name="title" placeholder="Add a catchy Title" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please provide a valid title.</div>
            </div>
            
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="description" placeholder="Enter Description" class="form-control" required></textarea>
                <div class="valid-feedback">Looks cool!</div>
                <div class="invalid-feedback">Please provide a valid description.</div>
            </div>
            
            <div class="mb-3"> 
                <label for="imageLink" class="form-label">Image Link</label>
                <input name="imageLink" placeholder="Enter Image URL/Link" type="text" class="form-control">
            </div>
            
            <div class="text-center mb-3">OR</div>
            
            <div class="mb-3"> 
                <label for="imageFile" class="form-label">Upload Listing Image</label>
                <input name="imageFile" type="file" class="form-control">
            </div>
            
            <div class="row">
                <div class="mb-3 col-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="price" placeholder="Enter Price" class="form-control" required>  
                    <div class="invalid-feedback">Please provide a valid price.</div>
                </div>
                
                <div class="mb-3 col-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="country" placeholder="Enter Country" class="form-control" required>
                    <div class="invalid-feedback">Please provide a valid country.</div>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="location" placeholder="Enter Location" class="form-control" required>
                <div class="invalid-feedback">Please provide a valid location.</div>
            </div>
            
            <button class="btn btn-dark mb-3" style="float: right">Add</button>
            <br>
        </form>
    </div>
</div>
